{
    "name":"s2i4-base",
    "default_attributes":{
        "authorization": {
          "sudo": {
            "groups":[ "sudo" ],
            "users":[],
            "passwordless": "true"
          }
        },
        "ntp": {
           "servers":["0.pool.ntp.org", "1.pool.ntp.org", "2.pool.ntp.org", "3.pool.ntp.org"]
        },
        "openssh": {
           "server": {
               "password_authentication": "no",
               "allow_groups": [ "sshusers" ],
               "permit_root_login": "no"
           },
           "client": {
               "hash_known_hosts": "yes"
           }
        },
        "zabbix": {
          "agent":  {
            "serverhost": "zabbix.s2i4.us"
          }
        },
        "firewall": {
          "rules": [
            { "Allow zabbix connections on port 10050": 
              {  "port": "10050",
                 "source": "159.203.235.97",
                 "protocol": "tcp"
              }
            },
            { "Allow zabbix connections on port 10051": 
              {  "port": "10051",
                 "source": "159.203.235.97",
                 "protocol": "tcp"
              }
            },
            { "Allow SSH connections from s01-unmanaged": 
              {  "port": "22",
                 "source": "159.203.235.97",
                 "protocol": "tcp"
              }
            }
          ],
        "allow_by_hostname": [
          { "hostname": "ljheidel.ddns.net",
            "port": "22"
          },
          { "hostname": "ljheidel.ddns.net",
            "port": "80"
          },
          { "hostname": "ljheidel.ddns.net",
            "port": "443"
          }
        ]
      }
    },
    "json_class":"Chef::Role",
    "env_run_lists":{},
    "run_list":[
        "recipe[sudo]",
        "recipe[curl]",
        "recipe[sar]",
	"recipe[ntp]",
	"recipe[htop]",
	"recipe[fail2ban]",
	"recipe[openssh]",
        "recipe[firewall]",
        "recipe[ufw]",
        "recipe[ufw::custom]",
	"recipe[s2i4-base]",
	"recipe[s2i4-ops]"
    ],
    "description":"s2i4 Management Infrastructure Base",
    "chef_type":"role",
    "override_attributes":{}
}
